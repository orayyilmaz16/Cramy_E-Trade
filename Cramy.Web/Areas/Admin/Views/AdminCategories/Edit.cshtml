@model Cramy.Domain.Entities.Category
@{
    ViewData["Title"] = "Kategori Düzenle";
    Layout = "_AdminLayout";
}

<div class="admin-glass-page">
    <div class="container glass-wrap">
        <div class="glass-card">

            <div class="glass-card-header">
                <div>
                    <div class="holo-pill">Cramy Admin • Kategori Düzenle</div>
                    <h3 class="mt-2 mb-0">Kategori Düzenle</h3>
                    <div class="small-muted mt-1">Kategori bilgilerini güncelleyin.</div>
                </div>

                <div class="d-flex gap-2">
                    <a class="btn btn-glass"
                       asp-area="Admin" asp-controller="AdminCategories" asp-action="Index">
                        Geri
                    </a>
                </div>
            </div>

            <div class="glass-card-body">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <form asp-area="Admin" asp-controller="AdminCategories" asp-action="Edit"
                      method="post" class="row g-3">
                    @Html.AntiForgeryToken()
                    <input asp-for="Id" type="hidden" />

                    <div class="col-12">
                        <label class="form-label small-muted">Kategori Adı</label>
                        <input asp-for="Name" class="form-control input-glass" placeholder="Örn: Elektronik" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label class="form-label small-muted">Slug</label>
                        <input asp-for="Slug" class="form-control input-glass" placeholder="örn: elektronik" />
                        <span asp-validation-for="Slug" class="text-danger"></span>
                        <div class="small-muted mt-1">
                            Boş bırakırsanız kategori adına göre otomatik oluşturulur.
                        </div>
                    </div>

                    <div class="col-12 d-flex gap-2 mt-2">
                        <button type="submit" class="btn btn-glass btn-primary-glow">Kaydet</button>
                        <a class="btn btn-glass"
                           asp-area="Admin" asp-controller="AdminCategories" asp-action="Index">
                            Vazgeç
                        </a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
