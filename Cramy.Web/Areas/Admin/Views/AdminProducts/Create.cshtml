@model Cramy.Web.Areas.Admin.Models.ProductCreateViewModel

@{
    ViewData["Title"] = "Yeni Ürün";
    Layout = "_AdminLayout"; // Admin layout
    var categories = ViewBag.Categories as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem> ?? new();
}

<div class="admin-glass-page">
    <div class="container glass-wrap">
        <div class="glass-card">
            <div class="glass-card-header">
                <div>
                    <div class="holo-pill">Cramy Admin • Ürün Ekle</div>
                    <h3 class="mt-2 mb-0">Yeni Ürün</h3>
                    <div class="small-muted mt-1">Ürün bilgisini doldurup kaydedin.</div>
                </div>
                <div class="d-flex gap-2">
                    <a class="btn btn-glass"
                       asp-area="Admin" asp-controller="AdminProducts" asp-action="Index">
                        Geri
                    </a>
                </div>
            </div>

            <div class="glass-card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- DİKKAT: Controller adı AdminProducts -->
                <form asp-area="Admin" asp-controller="AdminProducts" asp-action="Create"
                      method="post" class="row g-3">
                    @Html.AntiForgeryToken()

                    <div class="col-12 col-lg-4">
                        <label class="form-label small-muted">SKU</label>
                        <input asp-for="SKU" class="form-control input-glass" placeholder="CRMY-001" />
                        <span asp-validation-for="SKU" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-lg-8">
                        <label class="form-label small-muted">Ürün Adı</label>
                        <input asp-for="Name" class="form-control input-glass" placeholder="Ürün adı" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label class="form-label small-muted">Açıklama</label>
                        <textarea asp-for="Description" rows="5" class="form-control textarea-glass"
                                  placeholder="Ürün açıklaması"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-lg-3">
                        <label class="form-label small-muted">Fiyat</label>
                        <input asp-for="Price" class="form-control input-glass" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-lg-3">
                        <label class="form-label small-muted">Stok</label>
                        <input asp-for="StockQuantity" class="form-control input-glass" />
                        <span asp-validation-for="StockQuantity" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-lg-6">
                        <label class="form-label small-muted">Kategori</label>
                        <select asp-for="CategoryId" class="form-select select-glass" asp-items="categories">
                            <option value="">Kategori seç</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label class="form-label small-muted">Görsel URL (opsiyonel)</label>
                        <input asp-for="ImageUrl" class="form-control input-glass" placeholder="https://..." />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>

                        @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
                        {
                            <div class="mt-3 d-flex align-items-center gap-3">
                                <img src="@Model.ImageUrl" class="thumb" alt="preview" />
                                <div class="small-muted">Önizleme</div>
                            </div>
                        }
                    </div>

                    <div class="col-12">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label class="form-check-label small-muted" asp-for="IsActive">Aktif</label>
                        </div>
                    </div>

                    <div class="col-12 d-flex gap-2 mt-2">
                        <button type="submit" class="btn btn-glass btn-primary-glow">Kaydet</button>
                        <a class="btn btn-glass"
                           asp-area="Admin" asp-controller="AdminProducts" asp-action="Index">
                            Vazgeç
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
