@model Cramy.Domain.Entities.Product
@{
    ViewData["Title"] = "Ürünü Sil";
}

<div class="admin-glass-page">
    <div class="container glass-wrap">
        <div class="glass-card">
            <div class="glass-card-header">
                <div>
                    <div class="holo-pill">Admin Panel • Silme Onayı</div>
                    <h3 class="mt-2 mb-0">Ürünü Sil</h3>
                    <div class="small-muted mt-1">Bu işlem geri alınamaz.</div>
                </div>
                <div class="d-flex gap-2">
                    <a class="btn btn-glass" asp-area="Admin" asp-controller="AdminProducts" asp-action="Index">Geri</a>
                </div>
            </div>

            <div class="glass-card-body">
                <div class="row g-3 align-items-center">
                    <div class="col-12 col-lg-2">
                        @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
                        {
                            <img class="thumb" style="width:84px;height:84px;border-radius:18px;" src="@Model.ImageUrl" alt="@Model.Name" />
                        }
                        else
                        {
                            <div class="thumb d-flex align-items-center justify-content-center" style="width:84px;height:84px;border-radius:18px;">
                                <span class="small-muted">—</span>
                            </div>
                        }
                    </div>

                    <div class="col-12 col-lg-10">
                        <div class="fw-semibold fs-5">@Model.Name</div>
                        <div class="small-muted">SKU: @Model.SKU</div>
                        <div class="small-muted">Fiyat: @Model.Price.ToString("C") • Stok: @Model.StockQuantity</div>
                    </div>
                </div>

                <hr style="border-color: rgba(255,255,255,.12);" />

                <form asp-area="Admin" asp-controller="AdminProducts" asp-action="Delete" method="post" class="d-flex flex-wrap gap-2">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />

                    <button type="submit" class="btn btn-glass btn-danger-glow">
                        Evet, Sil
                    </button>

                    <a class="btn btn-glass" asp-area="Admin" asp-controller="AdminProducts" asp-action="Edit" asp-route-id="@Model.Id">
                        Vazgeç
                    </a>
                </form>

                <div class="small-muted mt-3">
                    Not: Soft delete istiyorsan (tam silme yerine) controller’da Remove yerine IsActive=false yapılır.
                </div>
            </div>
        </div>
    </div>
</div>
