<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cramy Admin</title>

    <link rel="icon" type="image/png" href="~/images/favicon.png" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/admin-glass.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)

    <style>
        :root {
            --nav-h: 74px;
            --glass-bg: rgba(17, 24, 39, 0.78);
            --glass-border: rgba(255, 255, 255, 0.10);
            --shadow: 0 14px 40px rgba(0,0,0,0.28);
            --radius: 16px;
        }

        /* HTML/BODY: height:100% yerine min-height kullan -> scroll/gradient daha stabil */
        html {
            scroll-behavior: smooth;
        }

        body {
            margin: 0;
            font-family: "Poppins", system-ui, -apple-system, "Segoe UI", sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background: #070b14; /* fallback */
        }

        /* Tüm admin arkaplanı burada yönetilir */
        .admin-bg {
            flex: 1;
            min-height: 100vh;
            padding-top: calc(var(--nav-h) + 1rem);
            background: radial-gradient(1200px 600px at 10% 5%, rgba(99,102,241,.30), transparent 60%), radial-gradient(900px 500px at 90% 20%, rgba(16,185,129,.22), transparent 55%), radial-gradient(800px 600px at 40% 90%, rgba(236,72,153,.18), transparent 60%), linear-gradient(180deg, #0b1220 0%, #070b14 100%);
            background-attachment: fixed; /* gradient "kesilme" hissini azaltır; istemezsen kaldır */
        }

        /* main artık padding-top ALMAYACAK (çift padding hatasını önler) */
        main {
            flex: 1;
            padding-top: 0;
        }

        a {
            text-decoration: none !important;
        }

        :focus-visible {
            outline: none;
            box-shadow: 0 0 0 .1rem rgba(255,255,255,0.9), 0 0 0 .25rem rgba(13,110,253,0.35);
            border-radius: 10px;
        }

        .app-navbar {
            min-height: var(--nav-h);
            background: var(--glass-bg) !important;
            border-bottom: 1px solid var(--glass-border);
            backdrop-filter: blur(14px);
            -webkit-backdrop-filter: blur(14px);
            box-shadow: var(--shadow);
        }

        .app-brand {
            letter-spacing: -0.02em;
        }

        .brand-badge {
            width: 40px;
            height: 40px;
            border-radius: 12px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(90deg, rgba(13,110,253,0.9), rgba(102,16,242,0.9));
            box-shadow: 0 12px 28px rgba(13,110,253,0.18);
        }

            .brand-badge .material-icons {
                font-size: 22px;
                color: #fff;
            }

        .app-navbar .nav-link {
            color: rgba(255,255,255,0.82) !important;
            font-weight: 600;
            border-radius: 12px;
            padding: .55rem .75rem;
            transition: background .18s ease, transform .18s ease, color .18s ease;
            display: inline-flex;
            align-items: center;
            gap: .45rem;
        }

            .app-navbar .nav-link:hover {
                background: rgba(255,255,255,0.10);
                transform: translateY(-1px);
                color: #fff !important;
            }

            .app-navbar .nav-link.active {
                background: rgba(13,110,253,0.16);
                color: #fff !important;
                border: 1px solid rgba(13,110,253,0.25);
            }

        .navbar-toggler {
            border: 1px solid rgba(255,255,255,0.18) !important;
            border-radius: 12px;
            padding: .5rem .65rem;
        }

            .navbar-toggler:focus {
                box-shadow: 0 0 0 .1rem rgba(255,255,255,0.85), 0 0 0 .25rem rgba(13,110,253,0.35);
            }

        .dropdown-menu {
            border-radius: 14px;
            border: 1px solid rgba(0,0,0,0.06);
            box-shadow: 0 18px 50px rgba(0,0,0,0.18);
            overflow: hidden;
        }

        .dropdown-item {
            padding: .65rem .9rem;
        }

            .dropdown-item:hover {
                background: rgba(13,110,253,0.08);
            }

        .app-footer {
            background: rgba(17, 24, 39, 0.92);
            border-top: 1px solid rgba(255,255,255,0.10);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
        }

        .footer-note {
            color: rgba(255,255,255,0.62);
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top app-navbar">
            <div class="container">

                <a class="navbar-brand fw-bold d-flex align-items-center gap-2 app-brand"
                   asp-area="Admin" asp-controller="AdminHome" asp-action="Index" aria-label="Cramy admin ana sayfa">
                    <span class="brand-badge">
                        <span class="material-icons">shield</span>
                    </span>
                    <span>Cramy Admin</span>
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse" data-bs-target="#adminNavbar"
                        aria-controls="adminNavbar" aria-expanded="false" aria-label="Menüyü aç/kapat">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="adminNavbar">

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-lg-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="AdminProducts" asp-action="Index">
                                <i class="bi bi-box-seam"></i> Ürünler
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="AdminProducts" asp-action="Create">
                                <i class="bi bi-plus-circle"></i> Ürün Ekle
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="AdminCategories" asp-action="Index">
                                <i class="bi bi-tags"></i> Kategoriler
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="AdminOrders" asp-action="Index">
                                <i class="bi bi-receipt-cutoff"></i> Siparişler
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-arrow-left-circle"></i> Siteye Dön
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-cart"></i> Sepet
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="accountDropdown"
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i>
                                    Admin
                                    <span class="d-none d-lg-inline text-white-50 ms-1">(@User.Identity!.Name)</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="accountDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Profile">
                                            <i class="bi bi-person me-2"></i> Profil
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="px-3 py-1">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right me-2"></i> Çıkış Yap
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Giriş
                                </a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="admin-bg">
        <main class="container my-4">
            @RenderBody()
        </main>

        <footer class="app-footer py-4 mt-auto">
            <div class="container">
                <div class="d-flex flex-wrap justify-content-between align-items-center footer-note small">
                    <span>Admin Panel — Yetkisiz erişimler loglanır.</span>
                    <span>© @DateTime.Now.Year — Cramy</span>
                </div>
            </div>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        (function () {
            const path = window.location.pathname.toLowerCase();
            const links = document.querySelectorAll('.app-navbar .nav-link[href]');
            links.forEach(a => {
                const href = (a.getAttribute('href') || '').toLowerCase();
                if (href && href !== '/' && path.startsWith(href)) a.classList.add('active');
            });
        })();
    </script>
</body>
</html>
