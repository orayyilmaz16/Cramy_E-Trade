@model Cramy.Web.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Şifre Sıfırla";
}

<section class="container py-5 reset-page">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">

            <div class="hero-glass rounded-4 p-4 p-lg-5 position-relative overflow-hidden">
                <div class="hero-orb orb-1"></div>
                <div class="hero-orb orb-2"></div>

                <div class="position-relative">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="hero-icon">
                            <i class="bi bi-key-fill"></i>
                        </div>
                        <div>
                            <h1 class="h4 fw-semibold mb-1">Şifre Sıfırla</h1>
                            <p class="text-muted mb-0">
                                Yeni şifrenizi belirleyin. Güçlü bir şifre seçmenizi öneririz.
                            </p>
                        </div>
                    </div>

                    @if (TempData["ResetInfo"] != null)
                    {
                        <div class="alert alert-info d-flex align-items-center gap-2">
                            <i class="bi bi-info-circle"></i>
                            <span>@TempData["ResetInfo"]</span>
                        </div>
                    }

                    <form asp-action="ResetPassword" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Hidden fields required by controller -->
                        <input asp-for="Email" type="hidden" />
                        <input asp-for="Token" type="hidden" />

                        <!-- Show email (read-only) -->
                        <div class="mb-3">
                            <label class="form-label">E-posta</label>
                            <input class="form-control form-control-lg" value="@Model.Email" readonly />
                            <div class="form-text">Bu bağlantı bu e-posta adresi için üretildi.</div>
                        </div>

                        <!-- New Password -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Yeni Şifre</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-transparent">
                                    <i class="bi bi-shield-lock"></i>
                                </span>

                                <input asp-for="Password"
                                       class="form-control"
                                       type="password"
                                       id="newPwd"
                                       autocomplete="new-password"
                                       placeholder="En az 8 karakter"
                                       required />

                                <button class="btn btn-outline-secondary" type="button" data-toggle="pwd" data-target="newPwd">
                                    Göster
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>

                            <!-- Strength -->
                            <div class="mt-2">
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <small class="text-muted">Şifre Gücü</small>
                                    <small class="fw-semibold" id="pwdLabel">—</small>
                                </div>
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar" role="progressbar" style="width:0%" id="pwdBar"></div>
                                </div>
                                <small class="text-muted d-block mt-2">
                                    İpucu: Büyük/küçük harf, rakam ve sembol ekleyin.
                                </small>
                            </div>
                        </div>

                        <!-- Confirm Password -->
                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label">Yeni Şifre Tekrar</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-transparent">
                                    <i class="bi bi-check2-circle"></i>
                                </span>

                                <input asp-for="ConfirmPassword"
                                       class="form-control"
                                       type="password"
                                       id="confirmPwd"
                                       autocomplete="new-password"
                                       required />

                                <button class="btn btn-outline-secondary" type="button" data-toggle="pwd" data-target="confirmPwd">
                                    Göster
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>

                            <div class="form-text mt-2" id="matchHint"></div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-save me-2"></i> Şifreyi Güncelle
                        </button>

                        <div class="d-flex justify-content-center mt-3">
                            <a asp-controller="Account" asp-action="Login" class="link-muted">
                                Giriş sayfasına dön <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>

                        <hr class="my-4" />

                        <div class="small text-muted">
                            <div class="d-flex gap-2 align-items-start">
                                <i class="bi bi-info-circle mt-1"></i>
                                <div>
                                    Bu bağlantı belirli süreyle geçerli olabilir. Süresi dolduysa yeniden “Şifremi Unuttum” ile link talep edin.
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <p class="text-center text-muted small mt-3 mb-0">
                © @DateTime.Now.Year — Cramy
            </p>
        </div>
    </div>
</section>

@section Styles {
    <style>
        .reset-page {
            animation: fadeUp .55s ease both;
        }
       

        .hero-glass {
            background: rgba(255,255,255,0.62);
            border: 1px solid rgba(255,255,255,0.45);
            backdrop-filter: blur(14px);
            -webkit-backdrop-filter: blur(14px);
            box-shadow: 0 16px 44px rgba(0,0,0,0.10);
        }

        .hero-icon {
            width: 58px;
            height: 58px;
            border-radius: 18px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #0d6efd, #6610f2);
            box-shadow: 0 14px 28px rgba(13,110,253,0.30);
            color: #fff;
            font-size: 1.55rem;
            flex: 0 0 auto;
        }

        .hero-orb {
            position: absolute;
            width: 520px;
            height: 520px;
            border-radius: 50%;
            filter: blur(28px);
            opacity: .55;
            pointer-events: none;
        }

        .orb-1 {
            left: -260px;
            top: -260px;
            background: radial-gradient(circle at 30% 30%, rgba(13,110,253,0.55), transparent 60%);
        }

        .orb-2 {
            right: -280px;
            bottom: -280px;
            background: radial-gradient(circle at 30% 30%, rgba(102,16,242,0.50), transparent 60%);
        }

        .form-control:focus, .btn:focus {
            box-shadow: 0 0 0 .1rem #fff, 0 0 0 .25rem rgba(13,110,253,.25);
        }

        .link-muted {
            color: rgba(33,37,41,0.70);
            text-decoration: none;
            font-weight: 600;
        }

            .link-muted:hover {
                color: rgba(13,110,253,0.95);
            }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Bootstrap-style validation
        (function () {
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();

        // Show/Hide password
        (function () {
            const buttons = document.querySelectorAll('[data-toggle="pwd"]');
            buttons.forEach(btn => {
                btn.addEventListener('click', () => {
                    const id = btn.getAttribute('data-target');
                    const input = document.getElementById(id);
                    if (!input) return;

                    const isPwd = input.type === 'password';
                    input.type = isPwd ? 'text' : 'password';
                    btn.textContent = isPwd ? 'Gizle' : 'Göster';
                });
            });
        })();

        // Strength + match check
        (function () {
            const newPwd = document.getElementById('newPwd');
            const confirmPwd = document.getElementById('confirmPwd');
            const bar = document.getElementById('pwdBar');
            const label = document.getElementById('pwdLabel');
            const hint = document.getElementById('matchHint');

            function scorePassword(p) {
                if (!p) return 0;
                let score = 0;
                score += Math.min(30, p.length * 3);
                if (/[a-z]/.test(p)) score += 15;
                if (/[A-Z]/.test(p)) score += 15;
                if (/\d/.test(p)) score += 15;
                if (/[^A-Za-z0-9]/.test(p)) score += 15;
                if (p.length < 8) score = Math.min(score, 35);
                return Math.min(100, score);
            }

            function renderStrength(score) {
                if (!bar || !label) return;
                bar.style.width = score + "%";
                bar.classList.remove("bg-danger", "bg-warning", "bg-success");

                let text = "Zayıf";
                if (score >= 70) { bar.classList.add("bg-success"); text = "Güçlü"; }
                else if (score >= 45) { bar.classList.add("bg-warning"); text = "Orta"; }
                else { bar.classList.add("bg-danger"); text = "Zayıf"; }

                label.textContent = text;
            }

            function renderMatch() {
                if (!hint || !newPwd || !confirmPwd) return;
                const p = newPwd.value || "";
                const c = confirmPwd.value || "";
                if (!c) { hint.textContent = ""; hint.className = "form-text mt-2"; return; }

                if (p === c) {
                    hint.textContent = "Şifreler eşleşiyor.";
                    hint.className = "form-text mt-2 text-success";
                } else {
                    hint.textContent = "Şifreler eşleşmiyor.";
                    hint.className = "form-text mt-2 text-danger";
                }
            }

            if (newPwd) {
                newPwd.addEventListener("input", function () {
                    renderStrength(scorePassword(newPwd.value));
                    renderMatch();
                });
                renderStrength(0);
            }
            if (confirmPwd) {
                confirmPwd.addEventListener("input", renderMatch);
            }
        })();
    </script>
}
