@{
    ViewData["Title"] = "Hakkımızda";
    var brand = "Cramy";
}

<section class="container py-4 py-lg-5 about-page">

    <!-- HERO -->
    <div class="about-hero hero-glass rounded-4 p-4 p-lg-5 mb-4 position-relative overflow-hidden">
        <div class="hero-orb orb-1"></div>
        <div class="hero-orb orb-2"></div>

        <div class="position-relative">
            <span class="badge about-badge mb-3">
                <i class="bi bi-stars me-2"></i> Modern E-Ticaret Deneyimi
            </span>

            <h1 class="display-6 fw-bold mb-2">@brand Hakkında</h1>
            <p class="lead text-muted mb-4 about-subtitle">
                @brand, kullanıcılarına hızlı, güvenli ve keyifli bir alışveriş deneyimi sunmak için tasarlanmış modern bir e-ticaret platformudur.
                Amacımız; doğru ürünü, doğru fiyata, doğru zamanda ulaştırmak.
            </p>

            <div class="d-flex flex-wrap gap-2">
                <span class="meta-pill">
                    <i class="bi bi-shield-check me-2"></i> Güvenli Altyapı
                </span>
                <span class="meta-pill">
                    <i class="bi bi-lightning-charge me-2"></i> Hız Odaklı
                </span>
                <span class="meta-pill">
                    <i class="bi bi-heart me-2"></i> Müşteri Memnuniyeti
                </span>
            </div>
        </div>
    </div>

    <!-- QUICK STATS -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-md-4">
            <div class="mini-stat">
                <div class="mini-icon"><i class="bi bi-truck"></i></div>
                <div>
                    <div class="mini-value">Hızlı</div>
                    <div class="mini-label">Teslimat ve Kargo Takibi</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="mini-stat">
                <div class="mini-icon"><i class="bi bi-lock"></i></div>
                <div>
                    <div class="mini-value">Güvenli</div>
                    <div class="mini-label">TLS/SSL + Güvenlik İzleme</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="mini-stat">
                <div class="mini-icon"><i class="bi bi-chat-dots"></i></div>
                <div>
                    <div class="mini-value">7/24</div>
                    <div class="mini-label">Destek ve İletişim Kanalları</div>
                </div>
            </div>
        </div>
    </div>

    <!-- MISSION / VISION -->
    <div class="row g-4 mb-4">
        <div class="col-12 col-lg-6">
            <div class="content-card h-100">
                <div class="d-flex align-items-start gap-3">
                    <div class="card-icon">
                        <i class="bi bi-bullseye"></i>
                    </div>
                    <div>
                        <h2 class="h4 fw-semibold mb-2">Misyonumuz</h2>
                        <p class="text-muted mb-3">
                            Kullanıcılarımızın aradığı ürünlere hızlıca ulaşabildiği, satın alma sürecinin şeffaf ve güvenli yürüdüğü,
                            müşteri memnuniyeti odaklı bir e-ticaret deneyimi sunmak.
                        </p>
                        <ul class="clean-list">
                            <li>Kolay keşif ve güçlü arama</li>
                            <li>Güvenli ödeme ve sipariş takibi</li>
                            <li>Kaliteli ürün ve hızlı destek</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-6">
            <div class="content-card h-100">
                <div class="d-flex align-items-start gap-3">
                    <div class="card-icon">
                        <i class="bi bi-eye"></i>
                    </div>
                    <div>
                        <h2 class="h4 fw-semibold mb-2">Vizyonumuz</h2>
                        <p class="text-muted mb-3">
                            Sadece ürün satan değil; kullanıcıları için “doğru seçim” yaptıran,
                            teknoloji ve tasarım ile sürekli gelişen, ölçeklenebilir bir alışveriş ekosistemi olmak.
                        </p>
                        <ul class="clean-list">
                            <li>Kişiselleştirilmiş öneriler</li>
                            <li>Performans ve güvenlikte süreklilik</li>
                            <li>Şeffaf süreçler ve güven ilişkisi</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- VALUES -->
    <div class="content-card mb-4">
        <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-2">
            <h2 class="h4 fw-semibold mb-0">Değerlerimiz</h2>
            <span class="text-muted small">Ürün, süreç ve destek yaklaşımımız</span>
        </div>

        <div class="row g-3 mt-1">
            <div class="col-12 col-md-6 col-xl-3">
                <div class="value-card">
                    <div class="value-icon"><i class="bi bi-shield-lock"></i></div>
                    <div class="value-title">Güven</div>
                    <div class="value-text">Güvenli altyapı, şeffaf süreç, güçlü veri koruma.</div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-xl-3">
                <div class="value-card">
                    <div class="value-icon"><i class="bi bi-rocket-takeoff"></i></div>
                    <div class="value-title">Hız</div>
                    <div class="value-text">Hızlı sayfa yükleme, hızlı satın alma, hızlı teslimat.</div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-xl-3">
                <div class="value-card">
                    <div class="value-icon"><i class="bi bi-award"></i></div>
                    <div class="value-title">Kalite</div>
                    <div class="value-text">Seçili ürünler, doğrulanmış içerikler, temiz deneyim.</div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-xl-3">
                <div class="value-card">
                    <div class="value-icon"><i class="bi bi-people"></i></div>
                    <div class="value-title">Müşteri Odaklılık</div>
                    <div class="value-text">İyi destek, güçlü geri bildirim döngüsü, empati.</div>
                </div>
            </div>
        </div>
    </div>

    <!-- TIMELINE -->
    <div class="content-card mb-4">
        <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
            <h2 class="h4 fw-semibold mb-0">Yolculuğumuz</h2>
            <span class="text-muted small">Kısa zaman çizelgesi</span>
        </div>

        <div class="timeline">
            <div class="timeline-item">
                <div class="timeline-dot"></div>
                <div class="timeline-content">
                    <div class="timeline-title">Başlangıç</div>
                    <div class="timeline-text text-muted">Temel altyapı, ürün yönetimi ve kullanıcı akışları tasarlandı.</div>
                </div>
            </div>

            <div class="timeline-item">
                <div class="timeline-dot"></div>
                <div class="timeline-content">
                    <div class="timeline-title">Ödeme & Sipariş</div>
                    <div class="timeline-text text-muted">Sipariş yönetimi, ödeme akışı ve güvenlik katmanları eklendi.</div>
                </div>
            </div>

            <div class="timeline-item">
                <div class="timeline-dot"></div>
                <div class="timeline-content">
                    <div class="timeline-title">Deneyim İyileştirme</div>
                    <div class="timeline-text text-muted">Performans, tasarım ve müşteri destek süreçleri optimize edildi.</div>
                </div>
            </div>

            <div class="timeline-item">
                <div class="timeline-dot"></div>
                <div class="timeline-content">
                    <div class="timeline-title">Sürekli Gelişim</div>
                    <div class="timeline-text text-muted">Analitik, kişiselleştirme ve yeni kategorilerle büyüme.</div>
                </div>
            </div>
        </div>
    </div>

    <!-- FAQ -->
    <div class="content-card mb-4">
        <h2 class="h4 fw-semibold mb-3">Sık Sorulan Sorular</h2>

        <div class="accordion" id="aboutFaq">
            <div class="accordion-item">
                <h3 class="accordion-header" id="q1">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#a1" aria-expanded="true" aria-controls="a1">
                        @brand hangi kategorilerde hizmet veriyor?
                    </button>
                </h3>
                <div id="a1" class="accordion-collapse collapse show" aria-labelledby="q1" data-bs-parent="#aboutFaq">
                    <div class="accordion-body">
                        Elektronik, moda, ev & yaşam ve spor gibi ana kategorilerle başlayıp, ürün gamını düzenli olarak genişletmeyi hedefliyoruz.
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h3 class="accordion-header" id="q2">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#a2" aria-expanded="false" aria-controls="a2">
                        Ödeme güvenliği nasıl sağlanıyor?
                    </button>
                </h3>
                <div id="a2" class="accordion-collapse collapse" aria-labelledby="q2" data-bs-parent="#aboutFaq">
                    <div class="accordion-body">
                        Trafik TLS/SSL ile korunur, şüpheli aktiviteler izlenir, hesap güvenliği ve oturum yönetimi için standart güvenlik önlemleri uygulanır.
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h3 class="accordion-header" id="q3">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#a3" aria-expanded="false" aria-controls="a3">
                        Destek taleplerini nasıl iletebilirim?
                    </button>
                </h3>
                <div id="a3" class="accordion-collapse collapse" aria-labelledby="q3" data-bs-parent="#aboutFaq">
                    <div class="accordion-body">
                        İletişim sayfasından form ile veya e-posta üzerinden ulaşabilirsiniz. Sipariş ile ilgili taleplerde sipariş numaranızı eklemeniz süreci hızlandırır.
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- CTA -->
    <div class="cta-card hero-glass rounded-4 p-4 p-lg-5 position-relative overflow-hidden">
        <div class="cta-orb orb-3"></div>

        <div class="position-relative d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-between gap-3">
            <div>
                <h2 class="h4 fw-semibold mb-1">Keşfetmeye Hazır mısınız?</h2>
                <p class="text-muted mb-0">Ürünleri inceleyin, kategorilerde gezinin ve hızlıca sipariş verin.</p>
            </div>

            <div class="d-flex gap-2 flex-wrap">
                <a class="btn btn-primary btn-lg px-4" asp-controller="Products" asp-action="Index">
                    <i class="bi bi-box-seam me-2"></i> Ürünlere Git
                </a>
                <a class="btn btn-outline-primary btn-lg px-4" asp-controller="Home" asp-action="Contact">
                    <i class="bi bi-chat-dots me-2"></i> İletişim
                </a>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style>
        /* Page animation */
        .about-page {
            animation: uiFadeIn .55s ease both;
        }
        

        /* Glass surface */
        .hero-glass {
            background: rgba(255,255,255,0.62);
            border: 1px solid rgba(255,255,255,0.45);
            backdrop-filter: blur(14px);
            -webkit-backdrop-filter: blur(14px);
            box-shadow: 0 16px 44px rgba(0,0,0,0.10);
        }

        .about-badge {
            background: rgba(13,110,253,0.10);
            color: #0d6efd;
            border: 1px solid rgba(13,110,253,0.22);
            padding: .55rem .85rem;
            border-radius: 999px;
            font-weight: 650;
        }

        .about-subtitle {
            max-width: 70ch;
        }

        .meta-pill {
            display: inline-flex;
            align-items: center;
            gap: .25rem;
            padding: .45rem .7rem;
            border-radius: 999px;
            background: rgba(255,255,255,0.50);
            border: 1px solid rgba(255,255,255,0.42);
            color: rgba(33,37,41,0.82);
            font-size: .9rem;
        }

        /* Hero orbs */
        .hero-orb, .cta-orb {
            position: absolute;
            width: 560px;
            height: 560px;
            border-radius: 50%;
            filter: blur(28px);
            opacity: .55;
            pointer-events: none;
        }

        .about-hero .orb-1 {
            left: -260px;
            top: -260px;
            background: radial-gradient(circle at 30% 30%, rgba(13,110,253,0.55), transparent 60%);
        }

        .about-hero .orb-2 {
            right: -280px;
            bottom: -280px;
            background: radial-gradient(circle at 30% 30%, rgba(102,16,242,0.50), transparent 60%);
        }

        .cta-card .orb-3 {
            right: -320px;
            top: -260px;
            background: radial-gradient(circle at 30% 30%, rgba(13,110,253,0.45), transparent 60%);
        }

        /* Cards */
        .content-card {
            background: rgba(255,255,255,0.62);
            border: 1px solid rgba(255,255,255,0.45);
            backdrop-filter: blur(14px);
            -webkit-backdrop-filter: blur(14px);
            border-radius: 18px;
            padding: 1.1rem 1.1rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        }

       

        .clean-list {
            padding-left: 1.2rem;
            margin-bottom: 0;
        }

            .clean-list li {
                margin: .35rem 0;
            }

        /* Mini stats */
        .mini-stat {
            background: rgba(255,255,255,0.62);
            border: 1px solid rgba(255,255,255,0.45);
            backdrop-filter: blur(14px);
            -webkit-backdrop-filter: blur(14px);
            border-radius: 18px;
            padding: 1rem 1.1rem;
            display: flex;
            align-items: center;
            gap: .9rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
            transition: transform .18s ease, box-shadow .18s ease;
        }

            .mini-stat:hover {
                transform: translateY(-2px);
                box-shadow: 0 16px 40px rgba(0,0,0,0.10);
            }

        .mini-icon {
            width: 46px;
            height: 46px;
            border-radius: 16px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background: rgba(13,110,253,0.10);
            color: #0d6efd;
            font-size: 1.2rem;
            flex: 0 0 auto;
        }

        .mini-value {
            font-weight: 750;
            letter-spacing: -0.02em;
        }

        .mini-label {
            color: rgba(33,37,41,0.72);
            font-size: .92rem;
        }

        /* Mission/Vision icon */
        .card-icon {
            width: 46px;
            height: 46px;
            border-radius: 16px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background: rgba(102,16,242,0.10);
            color: #6610f2;
            font-size: 1.2rem;
            flex: 0 0 auto;
        }

        /* Values */
        .value-card {
            background: rgba(255,255,255,0.55);
            border: 1px solid rgba(255,255,255,0.40);
            border-radius: 16px;
            padding: 1rem 1rem;
            height: 100%;
            transition: transform .18s ease, box-shadow .18s ease;
            position: relative;
            overflow: hidden;
        }

            .value-card::after {
                content: "";
                position: absolute;
                inset: -1px;
                background: radial-gradient(520px 220px at 10% 10%, rgba(13,110,253,0.14), transparent 60%), radial-gradient(520px 220px at 90% 20%, rgba(102,16,242,0.12), transparent 60%);
                opacity: 0;
                transition: opacity .18s ease;
                pointer-events: none;
            }

            .value-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 16px 40px rgba(0,0,0,0.10);
            }

                .value-card:hover::after {
                    opacity: 1;
                }

        .value-icon {
            width: 44px;
            height: 44px;
            border-radius: 16px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background: rgba(13,110,253,0.10);
            color: #0d6efd;
            font-size: 1.15rem;
            margin-bottom: .6rem;
        }

        .value-title {
            font-weight: 750;
            margin-bottom: .25rem;
        }

        .value-text {
            color: rgba(33,37,41,0.72);
        }

        /* Timeline */
        .timeline {
            position: relative;
            padding-left: 1rem;
            display: grid;
            gap: 1rem;
        }

            .timeline::before {
                content: "";
                position: absolute;
                left: 6px;
                top: .2rem;
                bottom: .2rem;
                width: 2px;
                background: rgba(13,110,253,0.20);
            }

        .timeline-item {
            display: grid;
            grid-template-columns: 14px 1fr;
            gap: .9rem;
            align-items: start;
        }

        .timeline-dot {
            width: 14px;
            height: 14px;
            border-radius: 50%;
            margin-top: .35rem;
            background: rgba(13,110,253,0.9);
            box-shadow: 0 10px 22px rgba(13,110,253,0.25);
        }

        .timeline-title {
            font-weight: 750;
        }

        .timeline-text {
            margin-top: .15rem;
        }

        /* Accordion */
        .accordion-item {
            border-radius: 14px;
            overflow: hidden;
            border: 1px solid rgba(0,0,0,0.06);
        }

        .accordion-button:focus {
            box-shadow: 0 0 0 .1rem #fff, 0 0 0 .25rem rgba(13,110,253,.22);
        }
    </style>
}
