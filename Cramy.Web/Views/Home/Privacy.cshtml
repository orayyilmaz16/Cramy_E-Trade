            -webkit-backdrop-filter: blur(14px);
            border-radius: 18px;
            padding: 1.1rem 1.1rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        }

        

        .clean-list {
            padding-left: 1.2rem;
            margin-bottom: 0;
        }

            .clean-list li {
                margin: .35rem 0;
            }

        /* Callouts */
        .callout {
            background: rgba(255,255,255,0.62);
            border: 1px solid rgba(255,255,255,0.45);
            backdrop-filter: blur(14px);
            -webkit-backdrop-filter: blur(14px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        }

        .callout-icon {
            width: 42px;
            height: 42px;
            border-radius: 14px;
