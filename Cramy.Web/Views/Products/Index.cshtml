@using Cramy.Application.DTOs
@model IEnumerable<ProductDto>

@{
    ViewData["Title"] = "Ürünler";
}

<h2 class="mb-4">Ürünler</h2>
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var product in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="@(string.IsNullOrEmpty(product.ImageUrl)
                                                  ? Url.Content("~/images/usb-cable.jpg")
                                                  : Url.Content(product.ImageUrl))"
                     class="card-img-top" alt="@product.Name" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text text-muted">@product.Description</p>
                    <p class="fw-bold">@product.Price.ToString("C")</p>
                    <form asp-controller="Cart" asp-action="Ekle" method="post" class="mt-auto">
                        <input type="hidden" name="productId" value="@product.Id" />
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-cart-plus"></i> Sepete Ekle
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>