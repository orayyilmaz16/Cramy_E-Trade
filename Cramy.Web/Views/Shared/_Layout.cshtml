<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cramy</title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/images/favicon.png" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Bootstrap (choose ONE source: CDN recommended) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Your site css -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)

    <style>
        /* ============== Layout-level (global) ============== */
        :root {
            --nav-h: 74px;
            --glass-bg: rgba(17, 24, 39, 0.78);
            --glass-border: rgba(255, 255, 255, 0.10);
            --shadow: 0 14px 40px rgba(0,0,0,0.28);
            --radius: 16px;
        }

        html, body {
            height: 100%;
        }

        body {
            margin: 0;
            font-family: "Poppins", system-ui, -apple-system, "Segoe UI", sans-serif;
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
            padding-top: calc(var(--nav-h) + 1rem);
        }

        a {
            text-decoration: none !important;
        }

        /* Better focus ring */
        :focus-visible {
            outline: none;
            box-shadow: 0 0 0 .1rem rgba(255,255,255,0.9), 0 0 0 .25rem rgba(13,110,253,0.35);
            border-radius: 10px;
        }

        /* ============== Navbar (modern glass) ============== */
        .app-navbar {
            min-height: var(--nav-h);
            background: var(--glass-bg) !important;
            border-bottom: 1px solid var(--glass-border);
            backdrop-filter: blur(14px);
            -webkit-backdrop-filter: blur(14px);
            box-shadow: var(--shadow);
        }

        .app-brand {
            letter-spacing: -0.02em;
        }

        .brand-badge {
            width: 40px;
            height: 40px;
            border-radius: 12px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(90deg, rgba(13,110,253,0.9), rgba(102,16,242,0.9));
            box-shadow: 0 12px 28px rgba(13,110,253,0.18);
        }

            .brand-badge .material-icons {
                font-size: 22px;
                color: #fff;
            }

        /* Nav links */
        .app-navbar .nav-link {
            color: rgba(255,255,255,0.82) !important;
            font-weight: 600;
            border-radius: 12px;
            padding: .55rem .75rem;
            transition: background .18s ease, transform .18s ease, color .18s ease;
            display: inline-flex;
            align-items: center;
            gap: .45rem;
        }

            .app-navbar .nav-link:hover {
                background: rgba(255,255,255,0.10);
                transform: translateY(-1px);
                color: #fff !important;
            }

            .app-navbar .nav-link.active {
                background: rgba(13,110,253,0.16);
                color: #fff !important;
                border: 1px solid rgba(13,110,253,0.25);
            }

        /* Hamburger button (better visibility) */
        .navbar-toggler {
            border: 1px solid rgba(255,255,255,0.18) !important;
            border-radius: 12px;
            padding: .5rem .65rem;
        }

            .navbar-toggler:focus {
                box-shadow: 0 0 0 .1rem rgba(255,255,255,0.85), 0 0 0 .25rem rgba(13,110,253,0.35);
            }

        

        /* Dropdown menu */
        .dropdown-menu {
            border-radius: 14px;
            border: 1px solid rgba(0,0,0,0.06);
            box-shadow: 0 18px 50px rgba(0,0,0,0.18);
            overflow: hidden;
        }

        .dropdown-item {
            padding: .65rem .9rem;
        }

            .dropdown-item:hover {
                background: rgba(13,110,253,0.08);
            }

        /* ============== Footer (modern) ============== */
        .app-footer {
            background: rgba(17, 24, 39, 0.92);
            border-top: 1px solid rgba(255,255,255,0.10);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
        }

        .footer-link {
            color: rgba(255,255,255,0.78) !important;
            padding: .35rem .5rem;
            border-radius: 10px;
            display: inline-flex;
            align-items: center;
            gap: .4rem;
            transition: background .18s ease, color .18s ease, transform .18s ease;
        }

            .footer-link:hover {
                color: #fff !important;
                background: rgba(255,255,255,0.10);
                transform: translateY(-1px);
            }

        .footer-note {
            color: rgba(255,255,255,0.62);
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top app-navbar">
            <div class="container">
                <a class="navbar-brand fw-bold d-flex align-items-center gap-2 app-brand"
                   asp-controller="Home" asp-action="Index" aria-label="Cramy ana sayfa">
                    <span class="brand-badge">
                        <span class="material-icons">shopping_cart</span>
                    </span>
                    <span>Cramy</span>
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Menüyü aç/kapat">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-lg-1">

                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            if (User.IsInRole("admin") || User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="adminDropdown"
                                       role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-shield-lock"></i> Yönetim
                                    </a>

                                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                        <li class="dropdown-header text-uppercase small text-muted px-3">Ürün Yönetimi</li>
                                        <li>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="AdminProducts" asp-action="Create">
                                                <i class="bi bi-plus-circle me-2"></i> Ürün Ekle
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="AdminProducts" asp-action="Index">
                                                <i class="bi bi-list-check me-2"></i> Ürün Listele / Güncelle / Sil
                                            </a>
                                        </li>

                                        <li><hr class="dropdown-divider" /></li>

                                        <li class="dropdown-header text-uppercase small text-muted px-3">Kategori Yönetimi</li>
                                        <li>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="AdminCategories" asp-action="Index">
                                                <i class="bi bi-tags me-2"></i> Kategori Listele / Güncelle / Sil
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="AdminCategories" asp-action="Create">
                                                <i class="bi bi-plus-square me-2"></i> Kategori Ekle
                                            </a>
                                        </li>

                                        <li><hr class="dropdown-divider" /></li>

                                        <li class="dropdown-header text-uppercase small text-muted px-3">Sipariş Yönetimi</li>
                                        <li>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="AdminOrders" asp-action="Index">
                                                <i class="bi bi-receipt-cutoff me-2"></i> Siparişler
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                        }



                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i> Ana Sayfa
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Index">
                                <i class="bi bi-box-seam"></i> Ürünler
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Order" asp-action="Index">
                                <i class="bi bi-receipt"></i> Siparişler
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-cart"></i> Sepet
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="accountDropdown"
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i>
                                    Hesabım
                                    <span class="d-none d-lg-inline text-white-50 ms-1">(@User.Identity!.Name)</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="accountDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                            <i class="bi bi-person me-2"></i> Profil
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="px-3 py-1">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right me-2"></i> Çıkış Yap
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Giriş
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-pencil-square"></i> Kayıt Ol
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="app-footer py-4 mt-auto">
        <div class="container">
            <div class="row g-3 align-items-center">
                <div class="col-12 col-md-6">
                    <div class="d-flex align-items-center gap-2">
                        <span class="brand-badge" style="width:34px;height:34px;border-radius:12px;">
                            <span class="material-icons" style="font-size:18px;">shopping_cart</span>
                        </span>
                        <div>
                            <div class="text-white fw-semibold">Cramy E-Ticaret</div>
                            <div class="footer-note small">© @DateTime.Now.Year — Tüm hakları saklıdır.</div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-6">
                    <ul class="nav justify-content-start justify-content-md-end gap-1">
                        <li class="nav-item">
                            <a class="footer-link nav-link" asp-controller="Home" asp-action="Privacy">
                                <span class="material-icons">lock</span> Gizlilik
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="footer-link nav-link" asp-controller="Home" asp-action="About">
                                <span class="material-icons">info</span> Hakkımızda
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="footer-link nav-link" asp-controller="Home" asp-action="Contact">
                                <span class="material-icons">mail</span> İletişim
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <hr class="border-light opacity-10 my-3" />

            <div class="d-flex flex-wrap justify-content-between align-items-center footer-note small">
                <span>Güvenli alışveriş için SSL/TLS etkin.</span>
                <span class="mt-2 mt-md-0">v1.0</span>
            </div>
        </div>
    </footer>

    <!-- Scripts (choose ONE: CDN recommended) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Active nav link (controller/action based)
        (function () {
            const path = window.location.pathname.toLowerCase();
            const links = document.querySelectorAll('.app-navbar .nav-link[href]');
            links.forEach(a => {
                const href = (a.getAttribute('href') || '').toLowerCase();
                if (href && href !== '/' && path.startsWith(href)) a.classList.add('active');
                if (href === '/' && (path === '/' || path.startsWith('/home'))) a.classList.add('active');
            });
        })();
    </script>
</body>
</html>
